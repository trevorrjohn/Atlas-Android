<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/atlas_message_cluster_space"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/atlas_message_item_time_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/atlas_message_item_time_group_padding_bottom"
        android:paddingTop="@dimen/atlas_message_item_time_group_padding_top"
        >

        <TextView
            android:id="@+id/atlas_message_item_time_group_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yesterday"
            android:textColor="@color/atlas_text_gray"
            android:textSize="@dimen/atlas_text_size_smaller2"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/atlas_message_item_time_group_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:08"
            android:textColor="@color/atlas_text_gray"
            android:textSize="@dimen/atlas_text_size_smaller2"
            />
    </LinearLayout>

    <Space
        android:id="@+id/atlas_message_item_cluster_space_gap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/atlas_message_cluster_space_gap"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        >

        <android.widget.Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <FrameLayout
            android:id="@+id/atlas_message_item_cell"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/atlas_message_item_cell_min_width"
            android:minHeight="@dimen/atlas_message_item_cell_min_height"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/atlas_message_item_receipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/atlas_message_item_receipt"
        android:text="Delivered"
        android:textColor="@color/atlas_text_gray"
        android:textSize="@dimen/atlas_text_size_smaller2"
        />

</LinearLayout>